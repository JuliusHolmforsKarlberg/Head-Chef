@using EPiServer.ServiceLocation;
@using Head_Chef.Models.ViewModels
@using Head_Chef.Models.Pages
@using EPiServer.Web.Mvc.Html

@model IPageViewModel<SitePageData>
@inject IContentLoader _contentLoader;

<header data-bs-theme="dark">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Head Chef</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">

                    @if (Model.Layout.SettingsPage.Navigation != null)
                    {
                        @foreach (var item in Model.Layout.SettingsPage.Navigation.FilteredItems)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@(_contentLoader.Get<SitePageData>(item.ContentLink).LinkURL)">@(_contentLoader.Get<SitePageData>(item.ContentLink).Name)</a>
                            </li>
                        }
                    }                  

                    
                </ul>
                <form class="d-flex" role="search" action="@Url.ContentUrl(Model.Layout.SettingsPage.SearchPage)">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query" value="">
                    <button class="btn btn-light" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
</header>