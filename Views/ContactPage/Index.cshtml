@using EPiServer.Web.Mvc.Html
@using Head_Chef.Models.ViewModels

@model ContactPageViewModel

<style>
    /* Container för kontaktinformation */
    .contact-container {
        max-width: 100%;
        min-width: 50vw;
        margin: 32px auto 0 auto;
        padding: 24px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    /* Rubrikstil */
    .contact-heading {
        color: #007bff;        
        margin-bottom: 20px;
        text-align: center;
        min-width: 300px;
    }

    /* Styling för kontaktinformation */
    .contact-info {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }
</style>

<div class="contact-container">
    
    <div class="contact-heading">@Html.PropertyFor(x => x.CurrentPage.ContactArea)</div>
</div>


