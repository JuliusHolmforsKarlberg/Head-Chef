﻿@using EPiServer.Framework.Localization;
@using EPiServer.Web.Mvc.Html
@using Head_Chef.Models.ViewModels
@using Head_Chef.Business.Extensions

@model SearchPageViewModel

@{
    var defaultPoster = "/static/img/default-poster.jpg";
}

<div class="py-5 bg-body-tertiary">
    <div class="container">
        <h1>@LocalizationService.Current.GetString("/searchresult")</h1>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 my-3">

            @if(Model != null)
            {
                foreach (var item in Model.Recipes)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@item.Image" alt="@item.Title" class="card-img-top img-fluid" />
                            <div class="card-body">
                                <h2 class="card-title h6">@item.Title </h2>
                                <form action="@Html.Action(Url.ContentUrl(Model.Layout.SettingsPage.SearchPage), "add")">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary" name="id" value="@item.Id">Add</button>
                                </form>
                            </div>

                        </div>
                    </div>
                }
                @*<p>total results: @Model.TotalResults</p>*@
            }
            
        </div>
    </div>
</div>