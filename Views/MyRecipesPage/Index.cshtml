@using EPiServer.Web.Mvc.Html
@using Head_Chef.Models.ViewModels;

@model MyRecipesViewModel

<div class="py-5 bg-body-tertiary">
    <div class="container">
        <h1>@Model.CurrentPage.Name</h1> @*fixa översättning*@
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-4 my-3">
            @foreach (var item in Model.MyRecipes)
            {
                <div class="col">
                    <div class="card " >
                        <img src="@item.Image" alt="@item.Title" class="card-img-top img-fluid" />
                        <div class="card-body">                            
                            <a href="@Url.ContentUrl(item.ContentLink)" class="text-decoration-none stretched-link">
                                <h2 class="card-title h5 hc-text-green">@item.Title </h2>
                            </a>
                            <div class="card-text" style="display: -webkit-box; -webkit-line-clamp: 5; -webkit-box-orient: vertical; overflow: hidden;">
                                @Html.Raw(item.Summary)
                            </div>                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

