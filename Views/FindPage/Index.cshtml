@using Head_Chef.Models.ViewModels
@using EPiServer.Framework.Localization
@model FindPageViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Episerver Page</title>
</head>
<body>

    <!-- Loading icon markup -->
    <div id="loading-icon" class="hidden">
        <!-- Your loading icon markup goes here -->
        Loading...
    </div>

    <section class="search-section py-5">
        <div class="container">
            <h1>@LocalizationService.Current.GetString("/find")</h1>
            <div class="row">
                <div class="col-lg-6 col-md-8 mx-auto search-form">
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        <input type="text" name="q" class="search-input" value="@Model.SearchQuery" />
                        <input type="submit" class="btn btn-primary my-2 search-button" value="Search" onclick="loadContent()" />
                    }
                </div>
            </div>
        </div>
    </section>

    @if (Model.Results != null)
    {
        <div class="container search-results">
            <p class="result-count">Your search for <i>@Model.SearchQuery</i> resulted in @Model.Results.Count() hits</p>
            <div class="listResult">
                <ul>
                    @foreach (var item in Model.Results)
                    {
                        <li class="result-item">
                            <h4 class="result-title"><a href="@item.Url">@item.Title</a></h4>
                            <p class="result-excerpt">@item.Excerpt</p>
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    <!-- Include your JavaScript -->
    <script>
        // Show loading icon
        function showLoadingIcon() {
            document.getElementById('loading-icon').classList.remove('hidden');
        }

        // Hide loading icon
        function hideLoadingIcon() {
            document.getElementById('loading-icon').classList.add('hidden');
        }

        // Load content function
        function loadContent() {
            showLoadingIcon();

            // Simulate asynchronous content loading (replace with your actual logic)
            setTimeout(function () {
                // Your content loading logic goes here

                // Hide loading icon when content is loaded
                hideLoadingIcon();
            }, 2000); // Simulating a 2-second delay
        }
    </script>

</body>
</html>
