@using Head_Chef.Models.ViewModels
@using EPiServer.Web.Mvc.Html

@model ArticlePageViewModel

<div class="container pt-5">
    <h1 class="text-center pt-3">@Model.CurrentPage.Heading</h1>
    <div class="row pt-3">
        <div class="col-12 col-lg-6 h-100">
            <img src="@Url.ContentUrl(Model.CurrentPage.Image)" alt="@Url.ContentUrl(Model.CurrentPage.ImageDescription)" class="img-fluid w-100" />
        </div>
        <div class="col-12 col-lg-6">
            
            <div>@Html.Raw(Model.CurrentPage.Body)</div>
        </div>
    </div>
</div>

